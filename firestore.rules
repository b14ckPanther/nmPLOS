rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User profile and settings - users can only access their own
    match /users/{userId} {
      // Profile data
      match /profile/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Settings
      match /settings/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Financial preferences
      match /financial_preferences/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Tasks - users can only access their own tasks
      match /tasks/{taskId} {
        allow read, write: if isOwner(userId);
      }
      
      // Courses - users can only access their own courses
      match /courses/{courseId} {
        allow read, write: if isOwner(userId);
      }
      
      // Projects - users can only access their own projects
      match /projects/{projectId} {
        allow read, write: if isOwner(userId);
      }
      
      // Exams - users can only access their own exams
      match /exams/{examId} {
        allow read, write: if isOwner(userId);
      }
      
      // Transactions - users can only access their own transactions
      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId);
      }
      
      // Bills - users can only access their own bills
      match /bills/{billId} {
        allow read, write: if isOwner(userId);
      }
      
      // Gmail tokens
      match /gmail/tokens {
        allow read, write: if isOwner(userId);
      }
      
      // Gmail messages (stored under gmail/data/messages subcollection)
      match /gmail/data/messages/{messageId} {
        allow read, write: if isOwner(userId);
      }
      
      // Habits (if you add this later)
      match /habits/{habitId} {
        allow read, write: if isOwner(userId);
      }
      
      // Jobs - users can only access their own jobs
      match /jobs/{jobId} {
        allow read, write: if isOwner(userId);
      }
      
      // Shifts - users can only access their own shifts
      match /shifts/{shiftId} {
        allow read, write: if isOwner(userId);
      }
      
      // Work Records - users can only access their own work records
      match /workRecords/{recordId} {
        allow read, write: if isOwner(userId);
      }
      
      // Freelance Incomes - users can only access their own freelance incomes
      match /freelanceIncomes/{incomeId} {
        allow read, write: if isOwner(userId);
      }
      
      // Sidebar preferences
      match /settings/sidebar {
        allow read, write: if isOwner(userId);
      }
      
      // Gym data - workouts, lessons, attendance, progress, alerts
      match /gym/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Prayer records
      match /prayer/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Subscriptions - users can only access their own subscriptions
      match /subscriptions/{subscriptionId} {
        allow read, write: if isOwner(userId);
      }
      
      // Loans - users can only access their own loans
      match /loans/{loanId} {
        allow read, write: if isOwner(userId);
      }
      
      // Apartment Payments - users can only access their own apartment payments
      match /apartmentPayments/{paymentId} {
        allow read, write: if isOwner(userId);
      }
      
      // Phone Payments - users can only access their own phone payments
      match /phonePayments/{paymentId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

